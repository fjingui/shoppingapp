<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/divider"
        android:id="@+id/imageView" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/myorder_orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号："
        android:layout_centerVertical="true"
        android:textSize="@dimen/textsize" />
    <Button
        android:id="@+id/myorder_opertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize"
        android:textColor="@color/colorAccent"
        android:background="@drawable/button_bak"
        android:layout_alignParentRight="true"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemimage"
            android:layout_width="@dimen/ordersheight"
            android:layout_height="@dimen/ordersheight"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/itemfac"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/textsize"
            android:layout_marginTop="@dimen/margintop"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toRightOf="@id/itemimage"/>
        <TextView
            android:id="@+id/pricecounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toRightOf="@id/itemimage"
            android:layout_below="@id/itemfac"/>
        <TextView
            android:id="@+id/item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:layout_marginRight="@dimen/margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/myorder_totalmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总价："
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize"/>
        <Button
            android:id="@+id/myorder_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:background="@drawable/button_bak"
            android:textColor="@color/paytextcolor"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bigdiv_line"/>
</LinearLayout>