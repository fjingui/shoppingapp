<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<FrameLayout
    android:id="@+id/upstateview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</FrameLayout>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/salelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shop.myapplication.SellThing">

        <TextView
            android:id="@+id/selectedimages"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="点击上传图片，最多7张。\n
            默认第一张图片封面显示"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/textsize"
            android:maxLines="8"
            android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/sellthings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="*卖家称呼："/>
        <EditText
            android:id="@+id/seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="姓名"
            android:textColorHint="@color/hint"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/sellthings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="*销售地址："/>
        <EditText
            android:id="@+id/selladdr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="销售品生产地址"
            android:textColorHint="@color/hint"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/sellthings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="*销售品：" />
        <EditText
            android:id="@+id/sellproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="名称"
            android:textColorHint="@color/hint"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/sellthings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="*销售品规格："/>
        <EditText
            android:id="@+id/sellformat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="如每斤5个/每只2-3斤等"
            android:textColorHint="@color/hint"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/sellthings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="*销售品单价："/>
        <EditText
            android:id="@+id/sellprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="一位小数，如5.6/2.3   "
            android:textColorHint="@color/hint"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/sellthings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="*单价购买数量：" />
        <EditText
            android:id="@+id/sellamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="限数字"
            android:textColorHint="@color/hint"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:textSize="@dimen/textsize"
            android:text="单位:"/>
        <EditText
            android:id="@+id/sellunit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="只/斤/瓶等"
            android:textColorHint="@color/hint"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/sellthings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="*销售品描述："/>
        <EditText
            android:id="@+id/selldesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="突出物品特色，如纯手工制作、天然野生等"
            android:textColorHint="@color/hint"
            android:maxLines="3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/sellthings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="*联系电话："/>
        <EditText
            android:id="@+id/sellnbr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="手机号码"
            android:textColorHint="@color/hint"/>
    </LinearLayout>
    <Button
        android:id="@+id/submitbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布销售"
        android:padding="@dimen/padding"
        android:gravity="center"
        android:textSize="@dimen/bigtextsize"
        android:textColor="@color/white"
        android:background="@color/noticetext"
        android:layout_marginBottom="@dimen/bottom"/>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
    </RelativeLayout>